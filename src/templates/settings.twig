{{ forms.textField({
    label: "Shipping Method Name",
    name: 'shippingMethodName',
    value: settings.shippingMethodName,
    required: true,
    placeholder: 'Pickup in-store',
    instructions: 'This is the name of the Shipping method that will be used for Click & Collect',
    errors: settings.getErrors('shippingMethodName')
}) }}

{{ forms.textField({
    label: "Shipping Method Handle",
    name: 'shippingMethodHandle',
    value: settings.shippingMethodHandle,
    required: true,
    placeholder: 'pickup-in-store',
    instructions: 'This is the handle of the Shipping method that will be used for Click & Collect',
    errors: settings.getErrors('shippingMethodHandle')
}) }}

{{ forms.textField({
    label: "Stores Field Handle",
    name: 'storeFieldHandle',
    value: settings.storeFieldHandle,
